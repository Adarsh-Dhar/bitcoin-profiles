
{
  "name": "contract-tests",
  "version": "1.0.0",
  "description": "Run unit tests on this project.",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "deno run --allow-read --allow-net --no-check comprehensive-tests.ts",
    "test:report": "deno run --allow-read --allow-net --no-check comprehensive-tests.ts",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test\"",
    "test:vending": "deno run --allow-read --allow-net --no-check tests/key-vending-machine.test.ts",
    "test:token": "deno run --allow-read --allow-net --no-check tests/key-token.test.ts",
    "test:factory": "deno run --allow-read --allow-net --no-check tests/factory.test.ts",
    "test:all": "deno run --allow-read --allow-net --no-check comprehensive-tests.ts",
    "test:bun": "bun run working-bun-tests.ts",
    "console": "clarinet console",
    "check": "clarinet check"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hirosystems/clarinet-sdk": "^3.6.0",
    "@types/node": "^24.4.0",
    "@stacks/transactions": "^7.2.0",
    "chokidar-cli": "^3.0.0",
    "vitest": "^3.2.4",
    "vitest-environment-clarinet": "^2.3.0"
  }
}
